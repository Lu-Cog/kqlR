.flex {
  display: flex;
  flex-flow: row wrap;
}
.flex-center {
  align-items: center;
  justify-content: center;
}
.flex-column {
  flex-direction: column;
}
.flex-middle {
  align-items: center;
}
.font-20 {
  font-size: 30rpx;
  letter-spacing: 4rpx;
  color: #fff;
}
.tab-block {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  background-size: contain;
  width: 100vw;
}
.tab-block .tab-list {
  height: 100rpx;
  padding: 0;
}
.tab-block .tab-list .left {
  margin-left: 50rpx;
}
.tab-block .tab-list .right {
  margin-right: 50rpx;
}
.tab-block .tab-list-default {
  background-color: #FF9EC1;
  border-top: 1px #dddddd solid;
}
.tab-block .tab-list-middle {
  position: relative;
  background: #FF9EC3;
  background-size: cover;
}
.tab-block .list-item {
  flex: 1;
}
.tab-block .list-item .item-img-box {
  width: 44rpx;
  height: 42rpx;
  margin-bottom: 9rpx;
  position: relative;
}
.tab-block .list-item .item-img {
  width: 44rpx;
  height: 42rpx;
}
.tab-block .mid-button {
  position: relative;
}
.tab-block .mid-button .item-img-box {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  position: absolute;
  z-index: 1002;
  top: -130rpx;
}
.tab-block .mid-button .item-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.tab-block .mid-button .item-text {
  font-size: 30rpx;
  position: absolute;
  z-index: 1002;
  bottom: -40rpx;
}
.tab-block .tab-bar {
  height: 30rpx;
  background-color: #FF9EC1;
}

